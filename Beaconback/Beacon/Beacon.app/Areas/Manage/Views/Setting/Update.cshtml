                    <label style="margin-bottom:10px;  font-size:20px;" font-size:20px;" asp-for="@Model.Logo">Esas Logo</label>
                    <input asp-for="@Model.Logo" accept="image/*" class="form-control">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.Logo"></span>
                    <p style="margin-top:15px;">Exsist Logo</p>
                    <img style="margin-top:15px; display:block;" width="200" src="~/images/@Model.GetDto.Logo" />
                </div>

                <div class="col-md-6" style="margin-bottom:40px;">
                    <label style="margin-bottom:10px;  font-size:20px;" font-size:20px;" asp-for="@Model.InfoImage">Haqqinda sekli</label>
                    <input asp-for="@Model.InfoImage" accept="image/*" class="form-control">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.InfoImage"></span>
