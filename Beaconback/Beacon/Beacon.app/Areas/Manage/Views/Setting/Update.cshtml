                </div>
                <div class="col-md-6 mb-2 ">
                    <label asp-for="@Model.AboutCompanyEn">Haqqinda Texti En</label>
                    <input name="AboutCompanyEn" value="@Model.GetDto.AboutCompanyEn" id="InfoTextEn" type="text" class="form-control">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.AboutCompanyEn"></span>
                </div>

                <div class="col-md-4 mb-2 ">
                    <label asp-for="@Model.Email">Email</label>
                    <input name="Email" value="@Model.GetDto.Email" id="InfoTextEn" type="email" class="form-control">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.Email"></span>
                </div>
                <div class="col-md-4 mb-2 ">
                    <label asp-for="@Model.PhoneNumber">PhoneNumber</label>
                    <input name="PhoneNumber" value="@Model.GetDto.PhoneNumber" id="PhoneNumber" type="tel" class="form-control">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.PhoneNumber"></span>
                </div>
                <div class="col-md-4 mb-2 ">
                    <label asp-for="@Model.SiteName">SiteName</label>
                    <input name="SiteName" value="@Model.GetDto.SiteName" id="SiteName" type="text" class="form-control">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.SiteName"></span>
                </div>

            </div>

